@model List<SignalRWebUI.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header ">
                        <h4 class="card-title">Kategori İşlemleri</h4>
                        <p class="card-category">Kategori Listesi</p>
                    </div>
                    <div class="card-body">
                        Kategori İle ilgili işlemleri buradan Seçiniz
                    </div>
                    <div class="card-body">
                        <table class="table table-head-bg-success table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Durumu</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CategoryID</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.CategoryStatus</td>
                                        <td><a href="/CategoryController1/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/CategoryController1/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/CategoryController1/CreateCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>