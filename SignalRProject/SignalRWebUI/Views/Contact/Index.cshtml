@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header ">
                        <h4 class="card-title">Ana Sayfa İletişim İşlemleri</h4>
                        <p class="card-category">İletişim Listesi</p>
                    </div>
                    <div class="card-body">
                        İletişim ile ilgili işlemleri buradan yapabilirsiniz. Tema Bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayın
                    </div>
                    <div class="card-body">
                        <table class="table table-head-bg-success table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Konum</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Açıklama</th>
                                    
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactID</td>
                                        <td>@item.ContactLocation</td>
                                        <td>@item.ContactPhone</td>
                                        <td>@item.ContactMail</td>
                                        <td>@item.ContactLocationDescriptionfooter</td>
                                        <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Contact/CreateContact/" class="btn btn-outline-primary">Yeni İletişim Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>