@model CreateSocialMediaDto

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Forms</h4>
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeni Sosyal Medya Girişi</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="SocialMediaTitle">Başlık Giriniz</label>
                            <input type="text" class="form-control" asp-for="SocialMediaTitle" id="SocialMediaTitle">

                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="SocialMediaIcon">İkon Giriniz</label>
                            <input type="text" class="form-control" asp-for="SocialMediaIcon" id="SocialMediaIcon">

                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="SocialMediaUrl">Link Giriniz</label>
                            <input type="text" class="form-control" asp-for="SocialMediaUrl" id="SocialMediaUrl">

                        </div>
                    </div>

                    <div class="card-action">
                        <button class="btn btn-success">Sosyal Medyayı Ekle</button>

                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

