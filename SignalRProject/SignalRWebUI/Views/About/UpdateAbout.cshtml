@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Forms</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ana Sayfa Hakkımızda Güncellemesi</div>
                        </div>

                        <input type="hidden" asp-for="AboutID" />

                        <div class="card-body">
                            <div class="form-group">
                                <label for="abouttitle">Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="AboutTitle" id="abouttitle">
                                <span asp-validation-for="AboutTitle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="aboutImageurl">Görselin Url'ini Giriniz</label>
                                <input type="text" class="form-control" asp-for="AboutImageUrl" id="aboutImageurl">
                                <span asp-validation-for="AboutImageUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="aboutDescription">Açıklamayı Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="AboutDescription" id="aboutDescription"></textarea>
                                <span asp-validation-for="AboutDescription" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Hakkımda Yazısını Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
