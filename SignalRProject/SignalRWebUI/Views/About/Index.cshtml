@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header ">
                        <h4 class="card-title">Ana Sayfa Hakkımızda İşlemleri</h4>
                        <p class="card-category">Hakkımızda Listesi</p>
                    </div>
                    <div class="card-body">
                       Hakkımızda ile ilgili işlemleri buradan yapabilirsiniz. Tema Bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayın
                    </div>
                    <div class="card-body">
                        <table class="table table-head-bg-success table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AboutID</td>
                                        <td>@item.AboutTitle</td>
                                        <td>@item.AboutDescription</td>
                                        <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/About/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımda Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>