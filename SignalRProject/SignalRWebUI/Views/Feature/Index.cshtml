@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header ">
                        <h4 class="card-title">Öne Çıkan İşlemleri</h4>
                        <p class="card-category">Öne Çıkan Listesi</p>
                    </div>
                    <div class="card-body">
                        Öne Çıkanlar İle ilgili işlemleri buradan Seçiniz
                    </div>
                    <div class="card-body">
                        <table class="table table-head-bg-success table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık 1</th>
                                    <th scope="col">Başlık 2</th>
                                    <th scope="col">Başlık 3</th>
                                    <th scope="col">Açıklama 1</th>
                                    <th scope="col">Açıklama 2</th>
                                    <th scope="col">Açıklama 3</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FeatureID</td>
                                        <td>@item.FeatureTitle1</td>
                                        <td>@item.FeatureTitle2</td>
                                        <td>@item.FeatureTitle3</td>
                                        <td>@item.FeatureDescription1</td>
                                        <td>@item.FeatureDescription2</td>
                                        <td>@item.FeatureDescription3</td>                                  
                                        <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Feature/CreateFeature/" class="btn btn-outline-primary">Yeni Öne Çıkanlar Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>