@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header ">
                        <h4 class="card-title">Günün İndirimleri İşlemleri</h4>
                        <p class="card-category">İndirimler Listesi</p>
                    </div>
                    <div class="card-body">
                       İndirimli ürünleri aşağıda yer almaktadır.Tema Bütünlüğü için 2 adet giriniz
                    </div>
                    <div class="card-body">
                        <table class="table table-head-bg-success table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DiscountID</td>
                                        <td>@item.DiscountTitle</td>
                                        <td>@item.Amount</td>
                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-warning">Durum</a></td>
                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Discount/CreateDiscount/" class="btn btn-outline-primary">Yeni İndirim Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>