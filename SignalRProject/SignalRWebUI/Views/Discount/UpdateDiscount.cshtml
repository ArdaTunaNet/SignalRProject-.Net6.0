@model UpdateDiscountDto

@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Forms</h4>
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeni İndirimli ürün Girişi</div>
                    </div>
                    <input type="hidden" asp-for="DiscountID" />
                    <div class="card-body">
                        <div class="form-group">
                            
                            <label for="discountTitle">Ürünün Adını Giriniz</label>
                            <input type="text" class="form-control" asp-for="DiscountTitle" id="discountTitle">

                        </div>
                        <div class="form-group">
                            <label for="amount">Ürünün İndirim Oranını Giriniz</label>
                            <input type="text" class="form-control" asp-for="Amount" id="amount">

                        </div>
                        <div class="form-group">
                            <label for="discountImageUrl">Ürünün Görselini Giriniz</label>
                            <input type="text" class="form-control" asp-for="DiscountImageUrl" id="discountImageUrl">

                        </div>
                        <div class="form-group">
                            <label for="discountDescription">Ürünün Açıklamasını Giriniz</label>
                            <input type="text" class="form-control" asp-for="DiscountDescription" id="discountDescription">

                        </div>

                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">İndirimli Ürünü Güncelle</button>

                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

