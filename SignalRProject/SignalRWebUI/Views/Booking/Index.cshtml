@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
    int count = 0;
}



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header ">
                        <h4 class="card-title">Rezervasyon İşlemleri</h4>
                        <p class="card-category">Rezervasyon Listesi</p>
                    </div>
                    <div class="card-body">
                        Rezervasyon İle ilgili işlemleri buradan Seçiniz
                    </div>
                    <div class="card-body">
                        <table class="table table-head-bg-success table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad Soyad</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Kişi Sayısı</th>
                                    <th scope="col">Rezervasyon Durumu</th>

                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.BookingName</td>
                                        <td>@item.BookingPhone</td>
                                        <td>@item.PersonCount</td>
                                        <td>Rezervasyon Alındı</td>


                                        <td><a href="/Booking/DeleteBooking/@item.BookingID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Booking/UpdateBooking/@item.BookingID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Booking/CreateBooking/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>