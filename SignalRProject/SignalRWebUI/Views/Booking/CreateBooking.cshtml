@model CreateBookingDto

@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Forms</h4>
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeni Rezervasyon Girişi</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="bookingname">Ad Soyad</label>
                            <input type="text" class="form-control" asp-for="BookingName" id="bookingname">

                        </div>
                        <div class="form-group">
                            <label for="bookingphone">Telefon</label>
                            <input type="text" class="form-control" asp-for="BookingPhone" id="bookingphone">

                        </div>
                        <div class="form-group">
                            <label for="bookingmail">Mail Adresi</label>
                            <input type="email" class="form-control" asp-for="BookingMail" id="bookingmail">

                        </div>
                        <div class="form-group">
                            <label for="personcount">Kişi Sayısı</label>
                            <input type="number" class="form-control" asp-for="PersonCount" id="personcount">

                        </div>
                        <div class="form-group">
                            <label for="bookingdate">Rezervasyon Tarihi</label>
                            <input type="date" class="form-control" asp-for="BookingDate" id="bookingdate">

                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Rezervasyon Ekle</button>

                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

