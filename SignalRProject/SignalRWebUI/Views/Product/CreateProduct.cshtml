
@model CreateProductDto


@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}


<div class="container-fluid">
    <h4 class="page-title">Forms</h4>
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeni Ürün Girişi</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="productname">Ürünün Adını Giriniz</label>
                            <input type="text" class="form-control" asp-for="ProductName" id="productname">
                    
                        </div> 
                        <div class="form-group">
                            <label for="price">Ürünün Fiyatını Giriniz</label>
                            <input type="text" class="form-control" asp-for="Price" id="price">
                    
                        </div>
                        <div class="form-group">
                            <label for="productdescription">Ürünün Tanımını Giriniz</label>
                            <input type="text" class="form-control" asp-for="ProductDescription" id="productdescription">
                    
                        </div>
                        <div class="form-group">
                            <label for="productimageurl">Ürünün Görselini Giriniz</label>
                            <input type="text" class="form-control" asp-for="ProductImageUrl" id="productimageurl">

                        </div>
                        <div class="form-group">
                            <label for="price">Ürünün Kategorisini Giriniz</label>
                           @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})

                        </div>
                           
                          
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Ürünü Ekle</button>

                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
