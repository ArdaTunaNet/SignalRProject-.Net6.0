
@model List<ResultProductDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}




<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header ">
                        <h4 class="card-title">Ürün İşlemleri</h4>
                        <p class="card-category">Ürün Listesi</p>
                    </div>
                    <div class="card-body">
                        Ürün İle ilgili işlemleri buradan Seçiniz
                    </div>
                    <div class="card-body">
                        <table class="table table-head-bg-success table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Kategori</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ProductID</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Price</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.ProductStatus</td>
                                        <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Product/CreateProduct/" class="btn btn-outline-primary">Yeni Ürün Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

